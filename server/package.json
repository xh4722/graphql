{
  "name": "server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"node ./scripts/generate-gql-typing.js\" \"nodemon --exec ts-node -- src/main.ts\"",
    "build": "node ./scripts/prepare.js && NODE_ENV=production ncc build src/main.ts",
    "gql-typing": "node ./scripts/generate-gql-typing.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "doc": "npx compodoc -p tsconfig.json -r 9999 -s -o",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/e2e/jest-e2e.json"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test/unit",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.2.0",
    "@nestjs/graphql": "^6.5.4",
    "@nestjs/platform-express": "^6.5.3",
    "@nestjs/terminus": "^6.5.1",
    "@ys/api": "^2.0.2",
    "apollo-server-express": "^2.9.16",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "graphql": "^14.6.0",
    "graphql-tools": "^4.0.6",
    "grpc": "^1.23.3",
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.9",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "@types/supertest": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "@ys/snippet-cli": "0.0.4",
    "@zeit/ncc": "^0.20.5",
    "concurrently": "^5.3.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-header": "^3.1.0",
    "fs-extra": "^8.0.1",
    "jest": "^23.6.0",
    "nodemon": "^1.19.4",
    "opn": "^6.0.0",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "24.0.2",
    "ts-loader": "^6.0.1",
    "ts-node": "8.1.0",
    "typescript": "3.4.3"
  }
}
